<%= render "shared/header" %>
<div class="hero min-h-screen bg-base-200">
  <div class="w-screen px-4 my-12 max-w-sm">
    <h1 class="text-3xl font-bold text-center mb-4">ログイン</h1>
    <div class="card flex-shrink-0 w-full shadow bg-base-100 mx-auto">
      <div class="card-body">
        <%= form_with url: admins_login_path, local: true do |f| %>
          <% if flash[:alert] %>
            <div class="alert alert-error mb-4">
              <span><%= flash[:alert] %></span>
            </div>
          <% end %>

          <div class="form-control">
            <%= f.label :email, "メールアドレス", class: "label" %>
            <%= f.email_field :email, class: "input input-bordered", required: true %>
          </div>

          <div class="form-control">
            <%= f.label :password, "パスワード", class: "label" %>
            <%= f.password_field :password, class: "input input-bordered", required: true %>
          </div>

          <div class="form-control mt-6">
            <%= f.submit "ログイン", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= render "shared/footer" %>
