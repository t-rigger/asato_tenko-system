<%= render "shared/header" %>
<div class="hero min-h-screen bg-base-200">
  <div class="w-screen px-4 my-12 max-w-sm">
    <h1 class="text-3xl font-bold text-center mb-4">ログイン</h1>
    <div class="card flex-shrink-0 w-full shadow bg-base-100 mx-auto">
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-control">
            <%= f.label :email, class: "label" do %>
              <span class="label-text">メールアドレス</span>
            <% end %>
            <%= f.email_field :email, class: "input input-bordered" %>
          </div>

          <div class="form-control">
            <%= f.label :password, class: "label" do %>
              <span class="label-text">パスワード</span>
            <% end %>
            <%= f.password_field :password, class: "input input-bordered" %>
          </div>

          <ul class="text-left">
            <li>
              <%= link_to new_admin_password_path, class: "label-text-alt link link-hover" do %>
                パスワードを忘れた方はこちら
              <% end %>
            </li>
          </ul>

          <div class="form-control mt-6">
            <%= f.submit "ログイン", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= render "shared/footer" %>
